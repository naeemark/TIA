<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".features.login.view.impl.LoginActivity">

    <ScrollView
        android:id="@+id/scrollView_fields"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/total_issued_tokens"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorRed"
                android:textSize="36sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewGents"
                    style="@style/ButtonText"
                    android:layout_margin="@dimen/margin_padding_max"
                    android:background="@drawable/shape_button_gents"
                    android:gravity="center"
                    android:text="GENTS\n2108" />

                <TextView
                    android:id="@+id/textViewLadies"
                    style="@style/ButtonText"
                    android:layout_margin="@dimen/margin_padding_max"
                    android:background="@drawable/shape_button_ladies"
                    android:gravity="center"
                    android:text="LADIES\n2108"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewTotal"
                style="@style/ButtonText"
                android:background="@drawable/shape_button_total"
                android:gravity="center"
                android:text="TOTAL\n4216"
                android:textSize="20sp" />


            <FrameLayout
                android:id="@+id/wrapper_clickable_back"
                style="@style/Button"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/margin_padding_maxmax"
                android:background="@drawable/selector_button_red">

                <TextView
                    style="@style/ButtonText"
                    android:text="@string/label_back" />
            </FrameLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
